# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~


POST    /signUp             controllers.auth.AuthorizationController.signUp
POST    /signIn             controllers.auth.CredentialsAuthController.authenticate

GET     /user               controllers.ApplicationController.getMe
GET     /logout             controllers.ApplicationController.signOut

GET     /flight/search      controllers.FlightController.search
GET     /flight             controllers.FlightController.getAllFlights
GET     /flight/:id         controllers.FlightController.getFlight(id:Int)
DELETE  /flight/:id         controllers.FlightController.deleteFlight(id:Int)



GET     /assets/*file       controllers.Assets.at(path="/public", file)


# All other front-end routes are handled on the client side by Angular.js
# therefore we can serve up the default HTML no matter what route is requested.

# Dynamic part of the url
GET   /views/$template<.+>.html        controllers.ApplicationController.view(template)

GET   /                 controllers.ApplicationController.index
GET   /*path            controllers.ApplicationController.anyPath(path: String)
